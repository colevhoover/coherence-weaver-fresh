# Coherence Weaver Environment Variables

# Google AI API configuration
GOOGLE_API_KEY=your_google_api_key_here
GENAI_MODEL=gemini-2.0-flash

# Agent configuration
DEFAULT_AGENT_NAME=coherence_weaver
DEFAULT_AGENT_DESCRIPTION=An agent that facilitates justice-aligned collaboration between AI systems
AGENT_TEMPERATURE=0.2
AGENT_TOP_P=0.95
AGENT_TOP_K=40

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# A2A configuration
A2A_PROTOCOL_VERSION=0.1
COORDINATION_STRATEGY=centralized

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/coherence_weaver.log

# Memory configuration
MEMORY_TYPE=in_memory  # in_memory, vertex_ai, custom
VERTEX_AI_CORPUS_NAME=projects/your-project-id/locations/global/ragCorpora/agent-relationships
VERTEX_AI_SIMILARITY_TOP_K=7

# Session configuration 
SESSION_TYPE=in_memory  # in_memory, database, custom
DB_URL=sqlite:///./data/coherence_weaver.db

# Configuration system settings
SKIP_JSON_CONFIG=False  # Set to True to use only environment variables
